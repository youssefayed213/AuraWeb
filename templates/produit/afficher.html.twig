{% extends 'base1.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Nom_Prod</th>
                <th>Description</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Nbr_Prods</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                
                <td>{{ produit.nomProd }}</td>
                <td>{{ produit.description }}</td>
                <td><img src="{{asset(produit.image)}}" height= 50></td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.nbrProds }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                    {{ include('produit/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>

{% endblock %}
