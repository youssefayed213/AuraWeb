                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for achat in achats %}
            <tr>
                <td>{{ achat.id }}</td>
                <td>{{ achat.nbrPiece }}</td>
                <td>{{ achat.produit }}</td>
                <td>{{ achat.prix }}</td>
