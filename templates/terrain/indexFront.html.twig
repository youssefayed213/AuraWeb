{% extends 'base.html.twig' %}
{% block title %}Terrain index{% endblock %}
{% block body %}
    <h1 class="d-flex justify-content-center">Liste des Terrain </h1>

    <div class="row d-flex flex-column align-items-center pt-3">
        {% for terrain in terrains %}
        
        <div class="card col-lg-6 col-6 px-2 m-2" style="width: 18rem;">
        <div class="card-body d-flex flex-column align-items-center">
        <h5 class="card-title">Adrese du terrain :<span class="fw-bold">{{ terrain.adresse }}</span></h5>
        <h6 class="card-subtitle mb-2 ">Surface du terrain :{{ terrain.surface }}</h6>
        <p class="card-text">Potentiel du terrain :{{ terrain.potentiel }}</p>
        <a href="{{ path('app_terrain_show', {'id': terrain.id}) }}"><button class="btn btn-primary">Afficher les details</button></a>
        </div>
</div>

           
        {% endfor %}
</div>
        <div class="pagination-item">
                <span>{{ knp_pagination_render(terrains) }}</span>
            </div>

{% endblock %}
