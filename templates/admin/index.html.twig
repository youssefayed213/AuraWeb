{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}
    <h1>Admin index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Password</th>
                <th>DateNais</th>
                <th>Tel</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td>{{ admin.id }}</td>
                <td>{{ admin.nom }}</td>
                <td>{{ admin.prenom }}</td>
                <td>{{ admin.email }}</td>
                <td>{{ admin.password }}</td>
                <td>{{ admin.dateNais ? admin.dateNais|date('Y-m-d') : '' }}</td>
                <td>{{ admin.tel }}</td>
                <td>{{ admin.adresse }}</td>
                <td>
                  {<a href="{{ path('app_admin_show', {'id': admin.id}) }}">show</a>}  
                    {<a href="{{ path('app_admin_edit', {'id': admin.id}) }}">edit</a>}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_new') }}">Create new</a>
{% endblock %}
